1-- CREATE INDEX idx_libros_editorial_titulo
ON libros (id_editorial, titulo);
2-- CREATE INDEX idx_libros_fecha_publicacion
ON libros (fecha_publicacion);
3-- DROP INDEX idx_libros_editorial_titulo
ON libros;
4-- -- Paso 1: Eliminar el índice compuesto anterior (si no lo eliminaste en Ejercicio 3)
DROP INDEX IF EXISTS idx_libros_editorial_titulo ON libros;

-- Paso 2: Crear el nuevo índice ÚNICO solo en la columna id_editorial
CREATE UNIQUE INDEX idx_libros_id_editorial_unico
ON libros (id_editorial);
5-- -- Forma de hacerlo con ALTER TABLE (Equivalente al Ejercicio 4)

-- 1. Eliminar el índice existente usando ALTER TABLE
ALTER TABLE libros
DROP INDEX IF EXISTS idx_libros_editorial_titulo;

-- 2. Añadir el nuevo índice ÚNICO usando ALTER TABLE
ALTER TABLE libros
ADD UNIQUE INDEX idx_libros_id_editorial_unico (id_editorial);
6-- -- NOTA: Esto es redundante porque ya es PRIMARY KEY, pero es la sintaxis pedida.
CREATE UNIQUE INDEX idx_editoriales_id_unico
ON editoriales (id_editorial);
7-- CREATE TABLE libros (
    id_libro INT PRIMARY KEY,  -- ¡Aquí ya está definido el índice PRIMARY!
    ...
);
8-- -- Este es el comando si la tabla NO tuviera un PRIMARY KEY:
ALTER TABLE libros
ADD PRIMARY KEY (id_libro);
